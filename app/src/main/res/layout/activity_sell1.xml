<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mybike.Sell1Activity"
    android:background="@color/white"
    android:layout_gravity="center"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:text="Product Details"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"/>


    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:text=" Brand"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerbrand"
            android:layout_width="291dp"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:background="@color/light_gray"
            android:backgroundTint="@color/light_gray"
            android:verticalScrollbarPosition="defaultPosition"
            android:popupBackground="@color/light_gray"/>


    </TableRow>
    <EditText
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        android:drawablePadding="15dp"
        android:drawableTint="#3F51B5"
        android:hint="Model"
        android:textSize="20sp"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginStart="45dp"/>

    <RelativeLayout>

        <EditText
            android:id="@+id/Price"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:layout_marginTop="18dp"
            android:background="#ffffff"
            android:drawablePadding="15dp"
            android:drawableTint="#3F51B5"
            android:hint="Price"
            android:textSize="20sp"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginStart="45dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="INR"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/Price"/>

    </RelativeLayout>


    <TableRow
        android:id="@+id/tableRow4"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fuel Type"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="18dp"
            />

        <Spinner
            android:id="@+id/spinnerfuelType"
            android:layout_width="252dp"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:background="@color/light_gray"
            android:layout_marginTop="18dp"
            android:popupBackground="@color/light_gray"/>

    </TableRow>
    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRow5"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" Ownership Status"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="18dp"/>

        <Spinner
            android:id="@+id/spinnerstatus"
            android:layout_width="252dp"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="18dp"
            android:background="@color/light_gray"
            android:popupBackground="@color/light_gray"/>

    </TableRow>
    <TableRow android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRow6"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Body Type"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="18dp"/>

        <Spinner
            android:id="@+id/spinnerbodyType"
            android:layout_width="252dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:layout_marginTop="18dp"
            android:background="@color/light_gray"
            android:popupBackground="@color/light_gray"/>

    </TableRow>
    <TableRow android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tableRow7"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="Colour"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="18dp"/>

        <Spinner
            android:id="@+id/spinnercolour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:layout_marginTop="18dp"
            android:background="@color/light_gray"
            android:popupBackground="@color/light_gray"/>

    </TableRow>


    <EditText
        android:id="@+id/sellerLocation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:background="#ffffff"
        android:drawablePadding="15dp"
        android:hint="Bike Sale Location"
        android:inputType="text"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="20dp"/>


    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="Save and Continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />



</TableLayout>