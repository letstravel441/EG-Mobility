                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableRight="@drawable/ic_star_black"
                                android:drawablePadding="2dp"
                                android:text="2"
                                android:textSize="15dp" />

                            <ProgressBar
                                android:id="@+id/progressBar2_booker"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:progressTint="#ff4500"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:scaleY="1.5" />

                            <TextView
                                android:id="@+id/noof2star_booker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableRight="@drawable/ic_star_black"
                                android:drawablePadding="2dp"
                                android:text="1"
                                android:textSize="15dp" />

                            <ProgressBar
                                android:id="@+id/progressBar1_booker"
                                android:progressTint="#ff0000"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:scaleY="1.5" />

                            <TextView
                                android:id="@+id/noof1star_booker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
