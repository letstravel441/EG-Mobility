<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_about_booker"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#EE6C00"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_about_booker">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_about_booker">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/bookerimage_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profile_image" />

                <TextView
                    android:id="@+id/bookername_about_booker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/bookerimage_profile"
                    android:text="har"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/ageofbookerheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookername_about_booker"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/bookerimage_profile"
                    android:text="Age :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookerage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bookername_about_booker"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/ageofbookerheading"
                    android:text="20"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/genderheading_booker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ageofbookerheading"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/bookerimage_profile"
                    android:text="Gender :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookergender_about_booker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ageofbookerheading"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/genderheading_booker"
                    android:text="Male"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/noofrides_about_booker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookerimage_profile"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:text="25"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookerimage_profile"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/noofrides_about_booker"
                    android:text="  Rides Taken"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/noofrides_about_booker"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/ReviewContent_booker"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rating_about_booker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="20dp"
                            android:text="4.5"
                            android:textColor="@color/black"
                            android:textSize="35sp"
                            app:drawableRightCompat="@drawable/ic_star_back" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/totalreviews_about_booker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:text="47"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" ratings and reviews"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
