<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:id="@+id/llContent_coPassengers"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8">

            <ImageView
                android:id="@+id/userimg_coPassengers"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_image" />

            <TextView
                android:id="@+id/name_coPassengers"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userimg_coPassengers"
                android:text="@string/name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ratings_coPassengers"
                android:layout_below="@id/name_coPassengers"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_ratings"
                android:textColor="#ffca28"
                android:text="4.5"
                android:drawablePadding="4dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="2.4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/source_coPassengers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:padding="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/destination_coPassengers"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/source_coPassengers"
                android:layout_marginTop="15dp"
                android:text="Drop Location"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="16sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/seatsbooked"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_seat_red"
                android:textColor="#000000"
                android:text="2"

                android:drawablePadding="10dp"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/chat_coPassengers"
                android:layout_below="@+id/seatsbooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:text=" Chat "
                android:textSize="16sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelride_coPassengers"
                android:layout_centerHorizontal="true"
                android:text="Cancel"
                android:backgroundTint="#b71c1c"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/chat_coPassengers"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/review_coPassengers"
                android:layout_centerHorizontal="true"
                android:text="Review"
                android:backgroundTint="#4CAF50"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/chat_coPassengers"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>