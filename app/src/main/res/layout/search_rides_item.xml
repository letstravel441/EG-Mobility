<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:id="@+id/llContent_search"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8">

            <ImageView
                android:id="@+id/userimg_search"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/name_search"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userimg_search"
                android:text="@string/name"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="2.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/source_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/destination_search"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/source_search"
                android:text="Drop Location"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Sun 06Jun,2021 09:46 AM"
                android:padding="8dp"
                android:layout_below="@id/destination_search"
                android:textSize="10sp"
                android:textColor="#357a38"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ratings_search"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_marginStart="10dp"
                android:padding="4dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_ratings"
                android:textColor="#ffca28"
                android:text="4.5"
                android:drawablePadding="4dp"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
            <TextView

                android:id="@+id/fare_search"
                android:layout_below="@+id/ratings_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:text="Fare/km : "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/sharefare_search"
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ratings_search"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/fare_search"
                android:textSize="18sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookride"
                android:text="BOOK"
                android:backgroundTint="#4CAF50"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/fare_search"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>