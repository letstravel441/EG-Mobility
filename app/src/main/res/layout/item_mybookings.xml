<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:id="@+id/llContent_bookingsdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#b71c1c"
            android:textAlignment="center"
            android:id="@+id/messagenoti"/>

        <LinearLayout
            android:id="@+id/llContent_booked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8">

                <ImageView
                    android:id="@+id/userimg2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />





            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/station2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Station name"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/location2"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/station2"
                    android:text="location"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/typeservice2"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/location2"
                    android:text="Typeofservice"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="15dp"  />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="Status"
                    android:textColor="#F44336"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/cancelservice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="63dp"
                    android:backgroundTint="#FF9800"
                    android:padding="10dp"
                    android:text="cancel"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#FF9800" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>