                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableRight="@drawable/ic_star_black"
                                android:drawablePadding="2dp"
                                android:text="4"
                                android:textSize="15dp" />

                            <ProgressBar
                                android:id="@+id/progressBar4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressTint="#1b5e20"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:scaleY="1.5" />

                            <TextView
                                android:id="@+id/noof4star"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableRight="@drawable/ic_star_black"
                                android:drawablePadding="2dp"
                                android:text="3"
                                android:textSize="15dp" />

                            <ProgressBar
                                android:id="@+id/progressBar3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:progressTint="#ffa500"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:scaleY="1.5" />

                            <TextView
                                android:id="@+id/noof3star"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableRight="@drawable/ic_star_black"
                                android:drawablePadding="2dp"
                                android:text="2"
                                android:textSize="15dp" />

                            <ProgressBar
                                android:id="@+id/progressBar2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:progressTint="#ff4500"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:scaleY="1.5" />

                            <TextView
                                android:id="@+id/noof2star"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableRight="@drawable/ic_star_black"
                                android:drawablePadding="2dp"
                                android:text="1"
                                android:textSize="15dp" />

                            <ProgressBar
                                android:id="@+id/progressBar1"
                                android:progressTint="#ff0000"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:scaleY="1.5" />

                            <TextView
                                android:id="@+id/noof1star"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3455"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/mobileNumber_Verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number Verified"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_below="@id/noofrides_about_publisher"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_blue_tick"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/LicenseNumber_Verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Verified"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_below="@+id/mobileNumber_Verification"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_blue_tick"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/Email_Verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email ID Verified"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/LicenseNumber_Verification"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:drawableRight="@drawable/ic_blue_tick"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="10dp"/>
