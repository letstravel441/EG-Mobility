                        android:layout_height="match_parent"
                        android:layout_weight="0.01">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.19"
                        android:orientation="vertical"
                        android:weightSum="5">

