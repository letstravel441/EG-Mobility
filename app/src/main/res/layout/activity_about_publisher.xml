                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_below="@+id/genderheading_publisher"
                    android:layout_toRightOf="@+id/noofridesheading_publisher"
                    android:textSize="18sp"
                    android:layout_margin="20dp"
                    android:id="@+id/noofrides_aboutpublisher"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Rating :"
                    android:layout_below="@+id/noofridesheading_publisher"
                    android:textSize="18sp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ratingheading_publisher"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_below="@+id/noofridesheading_publisher"
                    android:layout_toRightOf="@+id/ratingheading_publisher"
                    android:textSize="18sp"
                    android:layout_margin="20dp"
                    android:id="@+id/publisherrating_about_publisher"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   No.of 5 star Ratings :"
                    android:layout_below="@+id/ratingheading_publisher"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/fiveheading"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_below="@+id/ratingheading_publisher"
                    android:layout_toRightOf="@+id/fiveheading"
                    android:textSize="18sp"
                    android:layout_margin="20dp"
                    android:id="@+id/nooffivestar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   No.of 4 star Ratings :"
                    android:layout_below="@+id/fiveheading"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/fourheading"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_below="@+id/fiveheading"
                    android:layout_toRightOf="@+id/fourheading"
                    android:textSize="18sp"
                    android:layout_margin="20dp"
                    android:id="@+id/nooffourstar"
