                    android:text="   No.of 3 star Ratings :"
                    android:layout_below="@+id/fourheading"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/threeheading"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_below="@+id/fourheading"
                    android:layout_toRightOf="@+id/threeheading"
                    android:textSize="18sp"
                    android:layout_margin="20dp"
                    android:id="@+id/noofthreestar"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   No.of 2 star Ratings :"
                    android:layout_below="@+id/threeheading"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/twoheading"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_below="@+id/threeheading"
                    android:layout_toRightOf="@+id/twoheading"
                    android:textSize="18sp"
                    android:layout_margin="20dp"
                    android:id="@+id/nooftwostar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   No.of 1 star Ratings :"
                    android:layout_below="@+id/twoheading"
                    android:textSize="18sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/oneheading"/>

                <TextView
                    android:layout_width="wrap_content"
