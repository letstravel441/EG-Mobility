<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ProfileFragment">

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/stationname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProfilePic"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Station Name:"
            android:textColor="#111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stationname"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Username:"
            android:textColor="#111111"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameInput"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="e-mail:"
            android:textColor="#111111"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="location:"
            android:textColor="#111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Mobile number:"
            android:textColor="#111111"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/yourservices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Your Services:"
            android:textColor="#111111"
            android:textSize="18sp" />

        <Button
            android:id="@+id/previous_bookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yourservices"
            android:layout_marginTop="10dp"
            android:text="Previous bookings"
            app:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/update_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yourservices"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="23dp"
            android:text="Update Account"

            android:translationX="200dp"
            app:backgroundTint="#FF9800" />
    </RelativeLayout>
</ScrollView>