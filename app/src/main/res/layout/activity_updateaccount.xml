<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4E3DCDC"
    android:padding="16dp"
    tools:context=".serviceprovider.updateaccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:translationX="-27dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update your services"
            android:textColor="#e65100"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/EV_car_services"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:hint="your EV_car services"
            android:padding="12dp" />

        <TextView
            android:id="@+id/EV_bike_services"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:hint="your EV_bike services"
            android:padding="12dp" />

        <TextView
            android:id="@+id/NonEV_car_services"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:hint="your Non EV_car services"
            android:padding="12dp" />

        <TextView
            android:id="@+id/NonEV_bike_services"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:drawablePadding="16dp"
            android:hint="your Non EV_bike services"
            android:padding="12dp" />


        <RelativeLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="4dp">


        </RelativeLayout>


        <Button

            android:id="@+id/updateacc"

            android:layout_width="match_parent"

            android:layout_height="50dp"

            android:layout_marginLeft="10dp"

            android:layout_marginTop="25dp"

            android:layout_marginRight="10dp"
            android:backgroundTint="#e65100"
            android:text="UPDATE "
            android:textColor="@color/white"

            android:textSize="20sp"

            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>